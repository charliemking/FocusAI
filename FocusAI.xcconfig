// Architectures
ARCHS = arm64
VALID_ARCHS = arm64

// Deployment
IPHONEOS_DEPLOYMENT_TARGET = 16.0
TARGETED_DEVICE_FAMILY = 1

// Extended Virtual Addressing and Memory
ENABLE_EXTENDED_VIRTUAL_ADDRESSING = YES
ENABLE_HARDENED_RUNTIME = YES

// Memory Management
ENABLE_TESTABILITY = YES
ENABLE_STRICT_OBJC_MSGSEND = YES

// Optimization
SWIFT_OPTIMIZATION_LEVEL = -O
ENABLE_NS_ASSERTIONS = NO
GCC_OPTIMIZATION_LEVEL = fast

// Code Signing
CODE_SIGN_STYLE = Manual
CODE_SIGN_IDENTITY = Apple Development
DEVELOPMENT_TEAM = $(DEVELOPMENT_TEAM_ID)
CODE_SIGN_ENTITLEMENTS = FocusAI/FocusAI.entitlements

// Provisioning Profile
PROVISIONING_PROFILE_SPECIFIER = $(PROVISIONING_PROFILE_NAME)

// Build Settings
SWIFT_VERSION = 5.0
ENABLE_BITCODE = NO
DEAD_CODE_STRIPPING = YES
SWIFT_ACTIVE_COMPILATION_CONDITIONS = RELEASE

// Memory Limits
OTHER_LDFLAGS = $(inherited) -Xlinker -stack_size -Xlinker 0x40000000 -Xlinker -pagezero_size -Xlinker 0x0

// Compiler Flags
OTHER_SWIFT_FLAGS = $(inherited) -enable-bare-slash-regex

// Debug Information
DEBUG_INFORMATION_FORMAT = dwarf-with-dsym
ENABLE_NS_ASSERTIONS = NO

// Asset Catalog
ASSETCATALOG_COMPILER_OPTIMIZATION = space

// Linking
PRESERVE_DEAD_CODE_INITS_AND_TERMS = YES
LINK_WITH_STANDARD_LIBRARIES = YES 